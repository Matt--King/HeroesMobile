<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gps_button"
        android:id="@+id/to_gps_screen_btn"
        android:layout_marginTop="100dp"
        android:onClick="goToGPSScreen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/murky_answer_one"
        android:id="@+id/murky_is_blank"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_battlegrounds"
        android:id="@+id/to_battleground_screen_btn"
        android:layout_marginTop="100dp"
        android:onClick="goToBattlegroundsScreen"
        android:layout_below="@+id/to_gps_screen_btn"
        android:layout_alignLeft="@+id/to_gps_screen_btn"
        android:layout_alignStart="@+id/to_gps_screen_btn"
        android:layout_alignRight="@+id/to_gps_screen_btn"
        android:layout_alignEnd="@+id/to_gps_screen_btn" />
</RelativeLayout>
